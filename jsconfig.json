{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "moduleResolution": "Node",
        "baseUrl": "./",
        "paths": {
            "*": ["node_modules/*"]
        },
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
    },
    "include": ["src/**/*.js", "examples/**/*.js"],
    "exclude": ["node_modules"]
}  